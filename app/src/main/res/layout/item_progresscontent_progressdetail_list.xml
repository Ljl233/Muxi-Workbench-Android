<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="12dp"
    android:background="#ffffff"
    android:orientation="vertical">

    <com.facebook.drawee.view.SimpleDraweeView
        android:id="@+id/sdv_avatar_progressdetail_content_item"
        android:layout_width="41dp"
        android:layout_height="41dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="18dp"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        fresco:roundAsCircle="true" />

    <TextView
        android:id="@+id/tv_username_progressdetail_content_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="18dp"
        android:text="你的名字"
        android:textColor="#DE000000"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/sdv_avatar_progressdetail_content_item"
        app:layout_constraintTop_toTopOf="@+id/sdv_avatar_progressdetail_content_item" />

    <TextView
        android:id="@+id/tv_time_progressdetail_content_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="今天16：57"
        android:textColor="#ff999999"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/sdv_avatar_progressdetail_content_item"
        app:layout_constraintStart_toStartOf="@+id/tv_username_progressdetail_content_item" />

    <WebView
        android:id="@+id/wv_content_progressdetail_content_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_time_progressdetail_content_item"
        tools:ignore="WebViewLayout" />

    <ImageView
        android:id="@+id/iv_like_progressdetail_content_item"
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:layout_marginStart="37dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="5dp"
        android:clickable="true"
        android:src="@drawable/like_none"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wv_content_progressdetail_content_item" />

    <TextView
        android:id="@+id/tv_like_progressdetail_content_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:clickable="true"
        android:text="赞"
        android:textColor="#ff757575"
        android:textSize="12sp"
        fresco:layout_constraintBottom_toBottomOf="@+id/iv_like_progressdetail_content_item"
        fresco:layout_constraintStart_toEndOf="@+id/iv_like_progressdetail_content_item"
        fresco:layout_constraintTop_toTopOf="@+id/iv_like_progressdetail_content_item" />

    <ImageView
        android:id="@+id/iv_comment_progressdetail_content_item"
        android:layout_width="14dp"
        android:layout_height="10dp"
        android:clickable="true"
        android:src="@drawable/comment_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_like_progressdetail_content_item"
        app:layout_constraintEnd_toStartOf="@+id/iv_edit_progressdetail_content_item"
        app:layout_constraintStart_toStartOf="@+id/tv_like_progressdetail_content_item"
        app:layout_constraintTop_toTopOf="@+id/iv_like_progressdetail_content_item" />

    <TextView
        android:id="@+id/tv_comment_progressdetail_content_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:clickable="true"
        android:text="评论"
        android:textColor="#ff757575"
        android:textSize="12sp"
        fresco:layout_constraintBottom_toBottomOf="@+id/iv_comment_progressdetail_content_item"
        fresco:layout_constraintStart_toEndOf="@+id/iv_comment_progressdetail_content_item"
        fresco:layout_constraintTop_toTopOf="@+id/iv_comment_progressdetail_content_item" />

    <ImageView
        android:id="@+id/iv_edit_progressdetail_content_item"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginEnd="7dp"
        android:clickable="true"
        android:src="@drawable/editing_icon"
        app:layout_constraintBottom_toBottomOf="@+id/iv_like_progressdetail_content_item"
        app:layout_constraintEnd_toStartOf="@+id/tv_edit_progressdetail_content_item"
        app:layout_constraintTop_toTopOf="@+id/iv_like_progressdetail_content_item" />

    <TextView
        android:id="@+id/tv_edit_progressdetail_content_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="37dp"
        android:clickable="true"
        android:text="编辑"
        android:textColor="#ff757575"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_edit_progressdetail_content_item"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/iv_edit_progressdetail_content_item" />

</androidx.constraintlayout.widget.ConstraintLayout>
